<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFBDBD"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:background="#F6A8A8"
        android:text="@string/add"
        android:textColor="#250D0D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F8E5E5"
        android:onClick="addNames"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368"
        tools:text="ADD" />

    <Button
        android:id="@+id/draw"
        android:layout_width="146dp"
        android:layout_height="97dp"
        android:background="#FF5722"
        android:onClick="lucky"
        android:text="@string/draw"
        android:textColor="#F44336"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:backgroundTint="#D6CC71"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865" />

    <EditText
        android:id="@+id/names"
        android:layout_width="294dp"
        android:layout_height="77dp"
        android:background="#E8E6E6"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        android:autofillHints=""
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:layout_marginBottom="80dp"
        android:background="#FFFFFF"
        android:text="@string/textview"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/draw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="59dp"
        android:layout_height="162dp"
        android:text="@string/button"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/draw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906"
        tools:text="RESET" />

</androidx.constraintlayout.widget.ConstraintLayout>